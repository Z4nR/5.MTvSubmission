<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zulham.mtv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MyAppModule"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MTv">
        <activity android:name=".detailfavorite.DetailFavoriteActivity"
            android:parentActivityName=".favorite.FavoriteActivity"/>
        <activity
            android:name=".favorite.FavoriteActivity"
            android:label="@string/title_activity_favorite"
            android:parentActivityName=".main.MainActivity"
            android:theme="@style/Theme.MTv.NoActionBar" />
        <activity
            android:name=".splash.SplashActivity"
            android:theme="@style/Theme.MTvSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".detail.DetailActivity"
            android:parentActivityName=".main.MainActivity" />
        <activity
            android:name=".main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.MTv.NoActionBar" />
    </application>

</manifest>